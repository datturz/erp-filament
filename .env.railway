APP_NAME="Pants ERP System"
APP_ENV=production
APP_KEY=base64:sGVjCzxrT5aFgw5fknxJqkxZW+4L0xZLOZxJHXGxlkM=
APP_DEBUG=false
APP_URL=https://jubilant-prosperity-production.up.railway.app

LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Database configuration - use environment variables directly
DB_CONNECTION=mysql
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=WILL_BE_SET_BY_ENV

# Use file-based drivers for Railway (no Redis)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_CONNECTION=null
SESSION_STORE=null

# Mail configuration (can be set via Railway env vars)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Filament Admin Panel
FILAMENT_PATH=admin
FILAMENT_DOMAIN=null

# API Settings
API_PREFIX=api/v1
API_THROTTLE=100,1

# Business Settings
COMPANY_NAME="Pants Manufacturing Co."
WAREHOUSE_COUNT=1
STORE_COUNT=2
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York

# Security (Railway will use HTTPS)
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SANCTUM_STATEFUL_DOMAINS=${RAILWAY_PUBLIC_DOMAIN}

# Performance for Railway
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=5000