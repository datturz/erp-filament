# Vercel Frontend Environment Variables
# Add these to Vercel Dashboard → Settings → Environment Variables

# API Configuration (Required)
NUXT_PUBLIC_API_BASE=https://jubilant-prosperity-production.up.railway.app/api/v1
NUXT_PUBLIC_APP_NAME=Pants ERP

# PWA Configuration
NUXT_PUBLIC_PWA_NAME=Pants ERP Mobile
NUXT_PUBLIC_PWA_SHORT_NAME=PantsERP

# i18n Configuration
NUXT_PUBLIC_DEFAULT_LOCALE=en

# Analytics (Optional)
NUXT_PUBLIC_GA_ID=
NUXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NUXT_PUBLIC_ENABLE_OFFLINE=true
NUXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NUXT_PUBLIC_ENABLE_BARCODE_SCANNER=true

# Performance
NUXT_PUBLIC_API_TIMEOUT=30000
NUXT_PUBLIC_MAX_OFFLINE_QUEUE=100